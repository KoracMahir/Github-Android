<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.filter.FilterBottomSheetFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Filter"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/best_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:text="Best match"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_margin="20dp"
        app:drawableTint="@color/grey"
        app:drawableStartCompat="@drawable/ic_point" />
    <TextView
        android:id="@+id/most_stars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:text="Most stars"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/best_match"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:drawableTint="@color/grey"
        app:drawableStartCompat="@drawable/ic_point" />

    <TextView
        android:id="@+id/fewest_stars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:text="Fewest stars"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/most_stars"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:drawableTint="@color/grey"
        app:drawableStartCompat="@drawable/ic_point" />

    <TextView
        android:id="@+id/most_forks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:text="Most forks"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/fewest_stars"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:drawableStartCompat="@drawable/ic_point"
        app:drawableTint="@color/grey" />

    <TextView
        android:id="@+id/fewest_forks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:text="Fewest forks"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/most_forks"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:drawableStartCompat="@drawable/ic_point"
        app:drawableTint="@color/grey" />

    <TextView
        android:id="@+id/recently_udapted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:text="Recently updated"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/fewest_forks"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:drawableStartCompat="@drawable/ic_point"
        app:drawableTint="@color/grey" />

    <TextView
        android:id="@+id/least_recently_udapted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="20dp"
        android:text="Least recently updated"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/recently_udapted"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:drawableTint="@color/grey"
        app:drawableStartCompat="@drawable/ic_point" />

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_clear"
        android:backgroundTint="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>